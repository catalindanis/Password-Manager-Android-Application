<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.passwordmanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_2"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PasswordManager">
        <activity
            android:name=".SettingsPage.Settings"
            android:exported="false" />
        <activity
            android:name=".AboutPage.About"
            android:exported="false" />
        <activity
            android:name=".AddPasswordPage.PasswordManagerPage"
            android:exported="false" />
        <activity
            android:name=".LoginPage.SetupLoginPage"
            android:exported="false" />
        <activity
            android:name=".HomePage.HomePage"
            android:exported="true" />
        <activity
            android:name=".LoginPage.SetupPasswordPage"
            android:exported="true" />
        <activity
            android:name=".LoginPage.LoginPage"
            android:exported="true" />
        <activity
            android:name=".LoadingScreen.LoadingScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>