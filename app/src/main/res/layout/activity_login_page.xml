<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171830"
    android:visibility="visible"
    tools:context=".LoginPage.LoginPage">

    <EditText
        android:id="@+id/setupPassword"
        android:layout_width="1000px"
        android:layout_height="100px"
        android:layout_marginTop="14dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="25px"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/setupPasswordContinue"
        android:layout_width="750px"
        android:layout_height="250px"
        android:layout_marginTop="37dp"
        android:backgroundTint="#7c6474"
        android:fontFamily="@font/app_nunitobold"
        android:text="Continue"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginBioType1" />

    <TextView
        android:id="@+id/setupWrongPassword1"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:enabled="false"
        android:fontFamily="@font/app_nunitobold"
        android:gravity="center"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="45px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupPasswordContinue" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/app_nunitobold"
        android:text="Show password"
        android:textColor="#a294bc"
        android:textSize="50px"
        android:thumbTint="	#a294bc"
        android:trackTint="	#a294bc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupPassword" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/app_nunitobold"
            android:text="Password:"
            android:textColor="#fba127"
            android:textSize="85px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/app_nunitobold"
        android:text="Login using your credentials to proceed"
        android:textColor="@color/white"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/loginBioType1"
        android:layout_width="750px"
        android:layout_height="250px"
        android:layout_marginTop="92dp"
        android:backgroundTint="#fba127"
        android:fontFamily="@font/app_nunitobold"
        android:text="Fingerprint or Face Recognition"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="79dp"
        android:layout_height="73dp"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_no_background" />

</androidx.constraintlayout.widget.ConstraintLayout>