<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutconstraint"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:background="@drawable/dialog">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/app_nunitobold"
        android:text="Do you really want to continue this operation?"
        android:textAlignment="center"
        android:textColor="@color/app_yellow"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/no"
        android:layout_width="160dp"
        android:layout_height="51dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/dialog_button_left"
        android:fontFamily="@font/app_nunitobold"
        android:text="NO"
        android:textColor="@color/app_light_blue"
        app:layout_constraintEnd_toStartOf="@+id/yes"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yes"
        android:layout_width="160dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/dialog_button_right"
        android:fontFamily="@font/app_nunitobold"
        android:text="yes"
        android:textColor="@color/app_light_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>