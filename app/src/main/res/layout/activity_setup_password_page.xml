<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#171830"
        tools:context=".LoginPage.SetupPasswordPage">

    <EditText
            android:layout_width="1000px"
            android:layout_height="100px"
            android:inputType="textPassword"
            android:background="@drawable/border"
            android:ems="10"
            android:paddingLeft="25px"
            android:id="@+id/setupPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.551" app:layout_constraintVertical_bias="0.332"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Password:"
            android:textColor="#fba127"
            android:textSize="85px"
            android:fontFamily="@font/nunitobold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/setupPassword"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.065" app:layout_constraintVertical_bias="0.939"/>
    <EditText
            android:layout_width="1000px"
            android:layout_height="100px"
            android:inputType="textPassword"
            android:background="@drawable/border"
            android:ems="10"
            android:paddingLeft="25px"
            android:id="@+id/setupPasswordConfirm"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.551" app:layout_constraintVertical_bias="0.024"/>
    <TextView
            android:text="Confirm Password:"
            android:textColor="#fba127"
            android:textSize="85px"
            android:fontFamily="@font/nunitobold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131" app:layout_constraintVertical_bias="0.396"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Continue"
            android:layout_height="250px"
            android:layout_width="750px"
            android:textSize="50px"
            android:fontFamily="@font/nunitobold"
            android:backgroundTint="#7c6474"
            android:id="@+id/setupPasswordContinue"
            app:layout_constraintTop_toBottomOf="@+id/setupPasswordConfirm"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.193"
    />
    <Switch
            android:text="Show password"
            android:layout_width="wrap_content"
            android:textSize="50px"
            android:fontFamily="@font/nunitobold"
            android:textColor="#a294bc"
            android:thumbTint="	#a294bc"
            android:trackTint="	#a294bc"
            android:layout_height="wrap_content" android:id="@+id/switch1"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/setupPasswordConfirm" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/setupPasswordContinue" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text=""
            android:textColor="#FF0000"
            android:enabled="false"
            android:textSize="45px"
            android:fontFamily="@font/nunitobold"
            android:gravity="center"
            android:layout_width="700px"
            android:layout_height="wrap_content" android:id="@+id/setupWrongPassword"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/setupPasswordContinue"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>