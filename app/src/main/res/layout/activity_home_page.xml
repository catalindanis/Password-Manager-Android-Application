<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#171830"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomePage.HomePage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/MenuLayout"
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:background="@color/mikado_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/textlines"
            android:fontFamily="@font/nunitoregular"
            android:text="      ADD PASSWORD"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_marginTop="48dp"
            android:elevation="2dp"
            android:rotation="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/add"
            tools:srcCompat="@drawable/add" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginTop="104dp"
            android:background="@drawable/textlines"
            android:fontFamily="@font/nunitoregular"
            android:text="SETTINGS"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_marginTop="124dp"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/settings"
            tools:srcCompat="@drawable/settings" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginTop="700dp"
            android:background="@drawable/textlines"
            android:fontFamily="@font/nunitoregular"
            android:text="ABOUT"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_marginTop="721dp"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/info"
            tools:srcCompat="@drawable/info" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>